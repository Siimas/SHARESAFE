generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int             @id @default(autoincrement())
  name       String
  email      String          @unique
  password   String
  salt       String
  public_key String
  files      EncryptedFile[]
}

