model EncryptedFile {
  id             Int      @id @default(autoincrement())
  file_name      String
  file_type      String
  file_size      Int
  iv             Bytes
  created_at     DateTime @default(now())

  user    User @relation(fields: [user_id], references: [id])
  user_id Int
}
